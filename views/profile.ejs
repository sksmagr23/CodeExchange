<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-amber-200 via-amber-100 to-amber-200 text-gray-900 font-mono">
  <header class="bg-orange-600 text-white px-2 py-2.5 shadow-xl static">
    <div class="container mx-auto">
        <h1 class="text-xl font-bold mb-1">CodeExchange</h1>
      <nav>
        <a href="/" class="sm:mr-1 md:mr-3 text-md text-white transition-all ease duration-300 transform font-bold"><span class="px-1 py-0.5 rounded-md transition-all ease duration-300 transform hover:bg-white hover:text-orange-600 active:bg-orange-300 border border-white">Home</span></a>
        <a href="/questions/ask" class="sm:mr-1 md:mr-3 text-md text-white transition-all ease duration-300 transform font-bold"><span class="px-1 py-0.5 rounded-md transition-all ease duration-300 transform hover:bg-white hover:text-orange-600 active:bg-orange-300 border border-white">Ask Question?</span></a>
        <a href="/questions" class="sm:mr-1 md:mr-3 text-md text-white transition-all ease duration-300 transform font-bold"><span class="px-1 py-0.5 rounded-md transition-all ease duration-300 transform hover:bg-white hover:text-orange-600 active:bg-orange-300 border border-white">Questions</span></a>
        <a href="/api/auth/logout" class="sm:mr-1 md:mr-3 text-md text-white transition-all ease duration-300 transform font-bold"><span class="px-1 py-0.5 rounded-md transition-all ease duration-300 transform hover:bg-white hover:text-orange-600 active:bg-orange-300 border border-white">Logout</span></a>
      </nav>
    </div>
  </header>
  
  <main class="container mx-auto mt-4">
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h1 class="text-2xl font-bold mb-4">Profile</h1>
      <p class="mb-4">Username: <%= user.username %></p>
      <p class="mb-4">Email: <%= user.email %></p>

      <h2 class="text-xl font-semibold mb-4">Your Questions</h2>
      <% if (user.questions && user.questions.length > 0) { %>
        <% user.questions.forEach(question => { %>
          <div class="mb-4">
            <h3 class="text-lg font-semibold"><a href="/questions/<%= question._id %>"><%= question.title %></a></h3>
            <p class="text-sm text-gray-500">posted on <%= new Date(question.createdAt).toDateString() %></p>
            <button onclick="deleteQuestion('<%= question._id %>')" class="bg-red-500 text-white px-3 py-1 rounded">Delete Question</button>
            
          </div>
        <% }) %>
      <% } else { %>
        <p>No questions found.</p>
      <% } %>

      <h2 class="text-xl font-semibold mb-4">Your Answers</h2>
      <% if (user.answers && user.answers.length > 0) { %>
        <% user.answers.forEach(answer => { %>
          <div class="mb-4">
            <p class="text-gray-700"><%= answer.text %></p>
            <p class="text-sm text-gray-500">Answered on <%= new Date(answer.createdAt).toDateString() %> in <a href="/questions/<%= answer.question._id %>" class="text-blue-500"><%= answer.question.title %></a></p>
          </div>
        <% }) %>
      <% } else { %>
        <p>No answers found.</p>
      <% } %>
    </div>
  </main>
  <footer class="bg-orange-600 mt-4 p-1 text-center bottom-0 fixed left-0 right-0 w-screen shadow-lg">
    <p class="text-white">&copy 2024 CodeExchange. All rights reserved. Created by Saksham</p>
  </footer>

  <script>
    async function deleteQuestion(questionId) {
      try {
        const response = await fetch(`/questions/${questionId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          },
        });
        const data = await response.json();
        if (response.ok) {
          window.location.reload();
        } else {
          alert(data.message || 'Error deleting question');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error deleting question');
      }
    }
  </script>
  
</body>
</html>