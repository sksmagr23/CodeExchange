<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/fav.svg">
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-gradient-to-r from-[#84d2f6] to-[#edf6f9] text-gray-900 font-mono">
  <header class="bg-[#0466C8] text-white px-2 py-2.5 shadow-xl static">
    <div class="container mx-auto">
        <h1 class="text-xl font-bold mb-1">CodeExchange</h1>
      <nav>
        <a href="/" class="sm:mr-1 md:mr-3 text-md text-white transition-all ease duration-300 transform font-bold"><span class="px-1 py-0.5 rounded-md transition-all ease duration-300 transform hover:bg-white hover:text-[#0466C8] active:bg-[#5C677D] border border-white">Home</span></a>
        <a href="/questions/ask" class="sm:mr-1 md:mr-3 text-md text-white transition-all ease duration-300 transform font-bold"><span class="px-1 py-0.5 rounded-md transition-all ease duration-300 transform hover:bg-white hover:text-[#0466C8] active:bg-[#5C677D] border border-white">Ask Question?</span></a>
        <a href="/questions" class="sm:mr-1 md:mr-3 text-md text-white transition-all ease duration-300 transform font-bold"><span class="px-1 py-0.5 rounded-md transition-all ease duration-300 transform hover:bg-white hover:text-[#0466C8] active:bg-[#5C677D] border border-white">Questions</span></a>
        <a href="/api/auth/logout" class="sm:mr-1 md:mr-3 text-md text-white transition-all ease duration-300 transform font-bold"><span class="px-1 py-0.5 rounded-md transition-all ease duration-300 transform hover:bg-white hover:text-[#0466C8] active:bg-[#5C677D] border border-white">Logout</span></a>
      </nav>
    </div>
  </header>
  
  <main class="container mx-auto mt-5">
    <div class="p-1 rounded-xl shadow-xl mb-10">
      <div class="card1 p-4 rounded-xl mb-4">
        <h1 class="text-2xl font-bold mb-3 text-[#023E7D]">User Details</h1>
        <p class="mb-2 text-md font-semibold text-[#002855]">Username:- <%= user.username %></p>
        <p class="mb-2 text-md font-semibold text-[#002855]">Email:- <%= user.email %></p>
      </div>

      <div class="card1 p-4 rounded-xl mb-4">
        <h2 class="text-2xl font-bold mb-3 text-[#023E7D]">My Questions</h2>
        <% if (user.questions && user.questions.length > 0) { %>
          <% user.questions.forEach(question => { %>
            <div class="mb-4 card p-2">
              <div class="flex justify-between">
                <h3 class="text-lg font-semibold"><a href="/questions/<%= question._id %>" class="hover:text-[#0353A4] transition-all transform duration-300">➤ <%= question.title %></a></h3>
                <button onclick="deleteQuestion('<%= question._id %>')" class="bg-[#023E7D] text-white px-2 py-1 rounded hover:bg-[#002855] active:bg-[#001845]">Delete</button>
              </div>
                <p class="text-sm text-[#5C677D]">- posted on <%= new Date(question.createdAt).toLocaleString() %></p>
            </div>
          <% }) %>
        <% } else { %>
          <p>No questions found.</p>
        <% } %>
      </div>

      <div class="card1 p-4 rounded-xl mb-4">
        <h2 class="text-2xl font-bold mb-3 text-[#023E7D]">My Answers</h2>
        <% if (user.answers && user.answers.length > 0) { %>
          <% user.answers.forEach(answer => { %>
            <div class="mb-4 card p-2">
              <p class="text-gray-700 text-lg font-semibold">➤ <%= answer.text %></p>
              <p class="text-sm text-[#5C677D]">Answered on <%= new Date(answer.createdAt).toLocaleString() %> 
              <% if (answer.question) { %>
                in <a href="/questions/<%= answer.question._id %>" class="text-[#0466C8] font-semibold hover:text-[#0353A4]"><%= answer.question.title %></a>
              <% } else { %>
                (Question no longer exists)
              <% } %>
              </p>
            </div>
          <% }) %>
        <% } else { %>
          <p>No answers found.</p>
        <% } %>
      </div>  
    </div>
  </main>
  <footer class="bg-[#0466C8] mt-4 p-1 text-center bottom-0 fixed left-0 right-0 w-screen shadow-lg">
    <p class="text-white">&copy 2024 CodeExchange. All rights reserved. Created by Saksham</p>
  </footer>

  <script>
    async function deleteQuestion(questionId) {
      try {
        const response = await fetch(`/questions/${questionId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          },
        });
        const data = await response.json();
        if (response.ok) {
          window.location.reload();
        } else {
          alert(data.message || 'Error deleting question');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error deleting question');
      }
    }
  </script>
  
</body>
</html>